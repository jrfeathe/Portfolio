{
  "name": "portfolio-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter @portfolio/site dev",
    "lint": "pnpm --filter @portfolio/site lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,cjs,mjs,json,md,css}\"",
    "typecheck": "pnpm -r run typecheck --if-present"
  },
  "devDependencies": {
    "@portfolio/config": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  }
}
